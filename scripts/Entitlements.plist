<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow app to run with hardened runtime (required for notarization) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow network access for Ollama (localhost only in practice) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow microphone access for Voice Scribe -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Allow read/write to user-selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow read/write to Downloads folder for exports -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow Keychain access for secure key storage -->
    <key>com.apple.security.keychain-access-groups</key>
    <array>
        <string>$(TeamIdentifierPrefix)com.evidify.app</string>
    </array>
    
    <!-- Hardened runtime exceptions -->
    <!-- Allow loading unsigned libraries (for Ollama/whisper.cpp if needed) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow JIT (may be needed for some AI workloads) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Disable library validation (for third-party dylibs) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
